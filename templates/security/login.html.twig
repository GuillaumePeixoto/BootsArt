{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex align-items-center" style="min-height: 50vh">
        <form method="post" action="{{ path('app_login') }}" class="col-lg-6 col-md-8 col-12 mx-auto p-3 background-light-black font-light-gold rounded-3">
            {% if error %}
                <div class="alert alert-danger">Identifiants Invalides</div>
            {% endif %}

            {% for label, messages in app.flashes(['success', 'danger']) %}
                {% for message in messages %}
                    <div class="col-6 mx-auto text-center alert alert-{{ label }} my-5">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h1 class="h3 mb-3 text-center text-white font-weight-normal">Connectez-vous</h1>
            <div class="mb-3">
                <label for="username" class="text-white">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3">
                <label for="password" class="text-white">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <a class="text-white" href="{{ path('app_register') }}">Cr√©e un compte</a>

                <button class="btn btn-lg background-light-gold" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
{% endblock %}
